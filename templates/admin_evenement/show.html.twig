{% extends 'base.html.twig' %}

{% block title %}Evenement{% endblock %}

{% block body %}
    <h1>Evenement</h1>

    <a href="{{ path('admin_evenement_index') }}">Retour</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ evenement.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ evenement.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ evenement.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ evenement.prix }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ evenement.updatedAt ? evenement.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    

    <a href="{{ path('admin_evenement_edit', {'id': evenement.id}) }}" class="btn btn-success my-2">edit</a>

    {{ include('admin_evenement/_delete_form.html.twig') }}
{% endblock %}
