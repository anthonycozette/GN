    <body>

        {# NAVBAR #}
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    Navbar
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav w-100">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('home') }}">
                                Accueil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('presentation') }}">
                                Presentation du jeux GN
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('evenement') }}">
                                Calendrier des jeux
                            </a>
                        </li>
                        {% if is_granted('ROLE_USER') %}
                        <li class="nav-item">
                            <a class="nav-link" href="#">
                                Creation Evenement
                            </a>
                        </li>
                        {% endif %}
                        {% if is_granted('ROLE_USER') %}
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('contact') }}">
                                Contact
                            </a>
                        </li>
                        {% endif %}
                        {% if is_granted('ROLE_USER') %}
                        <li class="nav-item d-flex ms-auto">
                            <a class="nav-link" href="{{ path('profile') }}">
                                    Mon compte
                                </a>
                        </li>
                        {% endif %}

                        <li class="nav-item">
                            {% if is_granted('ROLE_USER') %}
                                <a class="nav-link" href="{{ path('app_logout') }}">
                                    Deconnexion
                                </a>
                            {% else %}
                                <a class="nav-link" href="{{ path('app_login') }}">
                                    Connexion
                                </a>
                            {% endif %}
                        </li>

                        {% if is_granted('ROLE_USER') %}
                        <li class="nav-item d-flex align-items-center">
                            <span>Bienvenue
                            {% if app.user.pseudo is defined and app.user.pseudo is not null %}
                            {{ app.user.pseudo }}
                            {% elseif app.user.nom is defined and app.user.nom is not null %}
                            {{ app.user.nom }}
                            {% else %}
                            {{ app.user.email }}
                            {% endif %}
                            </span>
                            {% if app.user.avatar.imageName is defined and app.user.avatar.imageName is not null %}
                            <img src="{{ asset('images/avatars/' ~  app.user.avatar.imageName ) | imagine_filter('my_thumb40')}}" alt="">
                            {% endif %}
                        </li>
                        {% endif %}

                        {% if not is_granted('ROLE_USER')%}
                        <li>
                        <a class="nav-link" href="{{path('app_register')}}">Inscription</a></li>
                    {% endif %}
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

